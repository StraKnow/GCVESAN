<div class="container">


    <h1 class="alert alert-secondary text-center">TODAS LAS CATEGORÍAS </h1>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                <tr>
                    <th>Título</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody class="table-hover bg-dark category-list">
                {{#each categories}}
                    <tr>

                        <td>{{title}}</td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/categorias/editarCategorias/{{_id}}" class="btn btn-sm btn-warning mr-2" role="button">Editar</a>
                            <form action="/admin/categorias/{{_id}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit" disabled>Borrar</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-8">
                <div class="form-group">
                    <label for="title">Nombre de nueva Categoria</label>
                    <input type="text" class="form-control" id="category-title" name="title" placeholder="Ingrese el nombre de la categoria">
                </div>
                    <button class="btn botonShiny btn-lg" id="create-category-button">Crear Categoria</button>
        </div>
    </div>


</div>